<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseControl.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Controle de Despesas"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Text="Data: " HorizontalOptions="End" VerticalOptions="Center"/>
                <DatePicker Grid.Column="1" />
                <Label Text="Categoria: " HorizontalOptions="End" VerticalOptions="Center"
                       Grid.Row="1" />
                <Picker x:Name="pickerCategory" Grid.Row="1" Grid.Column="1" />
                <Button
                Text="Adicionar categoria" 
                Clicked="OnAddCategoryClicked"
                HorizontalOptions="Fill" 
                Grid.Row="1" Grid.Column="2" />
                <Label Text="Valor: " HorizontalOptions="End" VerticalOptions="Center"
                       Grid.Row="2" />
                <Entry x:Name="entryValue" Placeholder="0,00"
                       Grid.Row="2" Grid.Column="1" />
                <Label Text="Descrição: " HorizontalOptions="End" VerticalOptions="Center"
                       Grid.Row="3" />
                <Entry x:Name="entryDescription" Grid.Row="3" Grid.Column="1" />
                <Button 
                    Text="Gravar Lançamento"
                    HorizontalOptions="FillAndExpand"
                    Grid.Row="4" Grid.Column="1"/>
            </Grid>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
